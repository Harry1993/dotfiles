urxvt.foreground: white
urxvt.background: black
urxvt.transparent: true
urxvt.shading: 15
urxvt.cursorColor: red

urxvt.dynamicColors: on

urxvt.perl-ext-common: default,resize-font,urxvt-colors

! font settings
urxvt.font: xft:Monaco:pixelsize=16
urxvt.boldFont: xft:Monaco:pixelsize=16:weight=bold
URxvt.letterSpace: -1

! disable the shitty scrollbar
URxvt.scrollBar: false

!! resize-font
URxvt.keysym.C-minus: resize-font:smaller
URxvt.keysym.C-equal: resize-font:bigger

!! change scheme
urxvt.keysym.F12: perl:urxvt-colors:
